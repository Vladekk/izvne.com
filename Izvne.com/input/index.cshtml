<nav aria-label="Page navigation">
    <ul class="pagination">
        <li>
            @if ((bool) Document["HasPreviousPage"])
            {
                var prevPage = (int) Document["CurrentPage"] - 1;
                var url = "/index.html";
                if (prevPage != 1)
                {
                    url = $"/archive-{((int) Document["CurrentPage"] - 1)}.html";
                }

                <a href="@url" aria-label="Previous">
                    <span aria-hidden="true">&lt;</span>
                </a>
            }

        </li>
        @{
            var totalPages = (int) Document["TotalPages"];
            for (var i = 0; i <totalPages; i++)
            {
                <li>    
                    @if (i == 0)
                    {
                        <a href="/index.html">1</a>
                    }
                    else
                    {
                        <a href="/archive-@(i + 1).html">@(i + 1)</a>
                    }
                </li>
            }
        }
        <li>
            @if ((bool) Document["HasNextPage"])
            {
                <a href="/archive-@((int) Document["CurrentPage"] + 1).html" aria-label="Next">
                    <span aria-hidden="true">&gt;</span>
                </a>
            }
        </li>
      
    </ul>
</nav>