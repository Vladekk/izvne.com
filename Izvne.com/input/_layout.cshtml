	    var width= Math.max(document.documentElement.clientWidth, window.innerWidth || 0)* window.devicePixelRatio;
//window.screen.width * window.devicePixelRatio;
	    if (width <240){
		width=240;
	    } else if (width <480){
		width=480;
	    } else
    	    if (width < 800) 
	    {
		width=725;		
            } else {
		width=1920;
	    }
	
	        if (src.indexOf("googleusercontent")!==-1){
                   resize="=s"+(width).toString();
	        } else {
		    if (width!==1920 ){
		      resize="?nf_resize=fit&w="+(width).toString();
		    }	

	        }
	    console.debug(resize);
            $(this).attr('data-src',src+resize);
	    
//            $(this).attr('data-src-retina',src+"?nf_resize=fit&w="+width);
        });


        $('img[data-src]').unveil(0);
    });
    $(document).keydown(function (e){
        if(e.which === 37 && e.ctrlKey && $('#prev').length) // left arrow
        {
            window.location.href = 
                $('#prev').attr("href");
            // your action here, for example
                    
        }
        else if(e.which === 39 && e.ctrlKey && $('#next').length)    // right arrow
        {
            window.location.href =
                $('#next').attr("href");
            // your action here, for example
                    
        } else if(e.which === 38 && e.ctrlKey && $('#toc').length)    // right arrow
        {
